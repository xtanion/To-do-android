<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="expanded_text">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="collapsed_text">
        <item name="fontFamily">@font/segoe_bold</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="column_text">
        <item name="fontFamily">@font/sf_pro_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="subtitle_text">
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>
    <style name="rounded_top_corners">
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
        <item name="android:background">?attr/cardBackgroundColor</item>
    </style>

<!--   DatePicker Styling-->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/deeper_blue</item>
        <item name="colorOnPrimary">@color/muted_white</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/sf_pro_text</item>
        <item name="android:calendarTextColor">?attr/colorOnPrimary</item>
        <item name="backgroundColor">?attr/cardBackgroundColor</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

<!--    TimePicker Styling-->
    <style name="Theme.App.Timepicker" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/deeper_blue</item>
        <item name="colorOnPrimary">@color/muted_white</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/cardBackgroundColor</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
</resources>